{% extends 'base.html.twig' %}

{% block title %}Nos Produits - La boutique en ligne!{% endblock %}

{% block content %}
<div class="row product-container">
                    <div class="col-md-4">
                        <div class="product-item text-center">
                            <a href="{{ path('product', { 'slug' : product.slug } ) }}">
                            <img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid">
                            <h5> {{ product.name }}</h5>
                            <spam class="product-subtitle"> {{ product.subtitle }}</spam><br>
                            <spam class="product-price">{{ (product.price /100)|number_format(2, ',', '.') }}</spam> 
                        </div>
                    </div>
            </div>
{% endblock %}