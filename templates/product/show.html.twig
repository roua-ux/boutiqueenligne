        <div class="col-md-4">
            <img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}">
        </div>
        <div class="col-md-8">
            <h3>{{ product.name }}</h3>
            <p>{{ product.subtitle }}</p>
            <spam class="product-page-price">{{ (product.price /100)|number_format(2, ',', '.') }}</spam> 
                <hr>
                <p>
                    {{ product.description }}

                </P>  
                <a href="" class="btn btn-primary">Ajouter au panier</a>     
        </div>    
    </div>
        
{% endblock %}
